{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "declaration": false,
    "skipLibCheck": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "./node_modules/@types/"
    ],
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}